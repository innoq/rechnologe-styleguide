# This is an EditorConfig file
# http://EditorConfig.org
# It configures your editor or IDE according to the project standards

root = true

# These rules apply to all files
[*]
# Unix-style newlines
end_of_line = lf
# Newline at the end of the file (See: https://robots.thoughtbot.com/no-newline-at-end-of-file)
insert_final_newline = true
# Set default charset
charset = utf-8
# 2 space indentation
indent_style = space
indent_size = 2
# Trim trailing whitespace
trim_trailing_whitespace = true
max_line_length = 200

[*.{html,md}]
indent_size = 4

[package.json]
indent_size = 2

[COMMIT_EDITMSG]
trim_trailing_whitespace = false
max_line_length = 72
indent_style = space
